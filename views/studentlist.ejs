<%- include('./base/header.ejs') %>
    <%- include('./base/nav.ejs') %>


        <div class="container">
            <div class="text-center mb-4">
                <h3 class="fw-bold text-primary">Student listâœ¨</h3>
            </div>
        </div>

        <div class="container">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th> Student Image</th>
                        <th> Roll No</th>
                        <th> Student Name</th>
                        <th> father Name</th>
                        <th> mother Name</th>
                        <th> Course</th>
                        <th> Branch</th>
                        <th> Year</th>
                        <th> Action </th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach((student)=>{%>
                        <tr>

                            <td><img src=" <%= student.studentImage %>" width="50px" height="50px"></img></td>
                            <td>
                                <%= student.rollNo %>
                            </td>
                            <td>
                                <%= student.studentName %>
                            <td>
                                <%= student.fatherName %>
                            </td>
                            <td>
                                <%= student.motherName %>
                            </td>
                            <td>
                                <%= student.course %>
                            </td>
                            <td>
                                <%= student.branch %>
                            </td>
                            <td>
                                <%= student.yearofAdmisson %>
                            </td>
                            <td>
                                <a href="/edit/student/page/<%= student._id %>" class="btn btn-warning">Edit</a>
                                <a href="/delete/student/<%= student._id %>" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <%- include('./base/footer.ejs') %>