<%- include('./base/header.ejs') %>

<div class="container d-flex justify-content-center align-items-center" style="min-height:100vh;">
    <div class="card shadow-lg p-4 rounded-4" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-primary">Create Account âœ¨</h3>
            <p class="text-muted">Fill in your details to sign up</p>
        </div>
        <form action="/add/user" method="post">
            <div class="mb-3">
                <label class="form-label fw-semibold">First Name</label>
                <input type="text" name="firstName" placeholder="Enter first name" class="form-control rounded-3" required>
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Last Name</label>
                <input type="text" name="lastName" placeholder="Enter last name" class="form-control rounded-3" required>
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" name="email" placeholder="Enter your email" class="form-control rounded-3" required>
            </div>
            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input type="password" name="password" placeholder="Enter password" 
                       class="form-control rounded-3" 
                       required
                       pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"
                       title="Password must contain at least 6 characters, including letters and numbers">
            </div>
            <button type="submit" class="btn btn-primary w-100 rounded-3 fw-bold shadow-sm">Sign Up</button>
        </form>
        <hr>
        <div class="text-center">
            <p class="mb-2">Already have an account?</p>
            <a href="/" class="btn btn-outline-danger w-100 rounded-3 fw-bold shadow-sm">Login</a>
        </div>
    </div>
</div>

